      document.getElementById('eblog_position_watermark-wrapper').style.display = 'none';		    }  }    if(document.querySelector('[name="eblog_watermark_enable"]:checked').value == 0){      document.getElementById('eblog_position_watermark-wrapper').style.display = 'none';	  } else{          document.getElementById('eblog_watermark_enable-wrapper').style.display = 'block';  }    function changeenablelocation() {    var values=document.querySelector('input[name="eblog_enable_location"]:checked').value;    if (parseInt(values) == 1)    {        document.getElementById("eblog_location_man-wrapper").style.display='block';        document.getElementById("eblog_search_type-wrapper").style.display='block';    }    else    {        document.getElementById("eblog_location_man-wrapper").style.display='none';        document.getElementById("eblog_search_type-wrapper").style.display='none';    }  }</script>
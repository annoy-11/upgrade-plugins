
/* Help setting tab in admin panel */
.sescommunityads_support_links{
	display:flex;
	flex-wrap:wrap;
}
.sescommunityads_support_links a{
	padding:40px 10px;
	width:30%;
	margin:5px;
	text-align:center;
	text-decoration:none !important;
	font-family:monospace;
	transition:all .5s ease;
}
.sescommunityads_support_links a h4{
	font-size:20px;
	font-weight:bold;
	color:#706e6e;
}
.sescommunityads_support_links a p{
	font-size:15px;
	padding:0 20px;
	margin-top:10px;
	color:#818181;
}
.sescommunityads_support_links a:nth-child(4n+1){
	background:#e1f9ed;
}
.sescommunityads_support_links a:nth-child(4n+2){
	background:#daf5ce;
}
.sescommunityads_support_links a:nth-child(4n+3){
	background:#fbf9d6;
}
.sescommunityads_support_links a:nth-child(4n+4){
	background:#ffe4ed;
}
.sescommunityads_support_links a:nth-child(4n+5){
	background:#ebe0ff;
}
.sescommunityads_support_links a:nth-child(4n+6){
	background:#e3e7ff;
}
.sescommunityads_support_links a:hover{
	box-shadow:0 20px 20px -15px #cacaca;
	transform:scale(1.01);
	transition:all .5s ease;
}
.sescommunityads_support_links a img{
	margin:0 auto;
	display:block;
	margin-bottom:10px;
	filter:invert(60%);
}
.sescommunityads_support_links b{
	font-weight:bold;
}
/*Shortcode Popup*/
.sescmads_shortcode_box{
	border-width:1px;
	border-style:dashed;
	padding:10px;
	margin:15px 0;
	background-color:rgba(235, 235, 235, 0.17);
	font-family:Courier, monospace;
	letter-spacing:1px;
}

/*Display Banner Ads*/

.sescmads_banner_ads {
	border-width: 1px;
}
.sescmads_banner_ads .sescmads_ads_listing {
	margin: 0;
	display: block;
}
.sescmads_bannerad_item {
	position: relative;
	width: 100%
}
.sescmads_bannerad_display {
	overflow-x: auto;
	width: 100%;
}
.sescmads_bannerad_display ._label {
	background-color: #f00;
	color: #fff !important;
	position: absolute;
	left: 0;
	top: 0;
	padding: 5px;
	font-size: 12px;
	font-weight: bold;
	text-transform: uppercase;
}
[dir="rtl"] .sescmads_bannerad_display ._label {
	left: auto;
	right: 0;
}
.sescmads_bannerad_display ._optionbtn {
	position: absolute;
	right: 5px;
	top: 5px
}
[dir="rtl"] .sescmads_bannerad_display ._optionbtn {
	left: 5px;
	right: auto;
}
.sescmads_bannerad_display ._optionbtn > a {
	height: 20px;
	width: 20px;
	display: block;
 background-color:$theme_button_background_color;
 color:$theme_button_font_color !important;
}
.sescmads_bannerad_display ._optionbtn .sesbasic_pulldown_options {
	right: -7px;
	margin-top: 10px;
}
.sescmads_bannerad_display ._optionbtn > a i {
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
}
[dir="rtl"] .sescmads_bannerad_display ._optionbtn .sesbasic_pulldown_options {
	right: auto;
	left: -7px;
}
.sescmads_bannerad_display ._optionbtn .sesbasic_pulldown_options ul{
	list-style:none !important;
	margin:0 !important;
}
.sescmads_bannerad_display .sescmads_bannerad_holder {
	display: block;
	margin: 0 auto;
}
.sescmads_bannerad_display ._img,  .sescmads_bannerad_display ._html {
	overflow: hidden;
}
.sescmads_bannerad_display ._img {
    text-align:center;
}
.sescmads_bannerad_display ._img img {
	vertical-align: middle;
}
/*Rented Ad Space*/
.sescomadbanr_rentedad_space_inner {
	overflow: auto;
}
.sescomadbanr_rentedad_space_item {
	background-size: cover;
	background-position: center;
	position: relative;
	margin: 0 auto;
}
.sescomadbanr_rentedad_space_item img{
	vertical-align:middle;
	max-width:100%;
}
.sescomadbanr_rentedad_space_item:before {
	background-color: rgba(0, 0, 0, .3);
	content: "";
	height: 100%;
	width: 100%;
	position: absolute;
}
.sescomadbanr_rentedad_space_item a {
 background-color:$theme_button_background_color;
 color:$theme_button_font_color !important;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
	padding: 0 30px;
	z-index: 1;
	white-space: nowrap;
	border-radius: 5px;
	font-weight: bold;
	font-size: 90%;
	line-height: 40px;
}
.sescomadbanr_rentedad_space_item a:hover {
	opacity: .9;
}
@media only screen and (max-width: 767px){
	.sescomadbanr_rentedad_space_item{
    width: auto !important;
    height: auto !important;
    max-width: 100%;
	}
	.sescomadbanr_rentedad_space_item a{
		padding:0 10px;
		line-height:30px;
	}
}

@import url('https://fonts.googleapis.com/css?family=Playfair+Display:400,400i,700,700i,900,900i');
.cd-hero-slider h2 {
	font-size: 55px;
}
.cd-signupform-tabs, .seshtmlbackground_form{
	background-color:transparent !important;
	max-width:800px !important;
	position:relative !important;
}
.cd-signupform-container{
	max-width:800px;
}
.cd-hero-slider .cd-half-width{
	width:100% !important;
	height:auto !important;
	position:relative;
	left:0 !important;
	right:0 !important;
	margin:auto !important;
}
.cd-signupform-container .form_bg {
	position: relative;
	padding: 10px 50px;
	border-radius: 200px;
	overflow: hidden;
}
.form_bg .form-elements {
	display: flex;
	flex-wrap: wrap;
}
.form_bg .global_form_box .form-wrapper{
	margin-top:0 !important;
}
.form_bg #user_form_login.global_form_box #remember-wrapper{
	display:none;
}
.form_bg .global_form_box input[type="email"], .form_bg .global_form_box input[type="password"],.form_bg .global_form_box input[type="text"],.form_bg .global_form_box select{
	padding: 12px 3% 8px 35px !important;
	border-radius: 50px;
}
.form_bg .global_form_box .form-wrapper .form-element:before, .form_bg .global_form_box #password-element:before{
	top:12px !important;
	left:5px !important;
}
.cd-signupform-container .form_bg:before{
	content:"";
	position:absolute;
	width:100%;
	height:100%;
	top:0;
	left:0;
	right:0;
	bottom:0;
	opacity:.2;
}
.form_bg .form-wrapper {
	width: calc(33% - 10px);
	margin: 5px;
}
.form_bg .seshtmlbackground_form .global_form_box{
	padding:0;
}
.form_bg #user_form_login #submit-wrapper {
	width: 100%;
	margin:0;
}
.form_bg #submit-wrapper {
	text-align: center;
}
.form_bg #submit-wrapper button{
  display: block;
  width: 100%;
	border-radius:50px !important;
	height: 40px;
}
.form_bg .global_form_box select {
  padding-left: 10px !important;
}
.cd-signupform-tabs a{
	color:#fff;
}
.cd-signupform-container.isnav{
	bottom:80px;
}
.cd-hero-slider p{
	word-break:break-all;
}